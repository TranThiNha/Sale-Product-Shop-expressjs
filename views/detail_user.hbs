                    <form id="demo-form2" action="/detail_user.html?_csrf={{csrfToken}}" data-parsley-validate class="form-horizontal form-label-left" role="form" method="POST" enctype="multipart/form-data">


                      <div class="form-group" style="float: left;width: 20%;">                     
                        <table >
                          <tr>

                            <th><img id="img_avatar" src="{{user.avatarUrl}}" alt="your image" style="width:200px; height:200px; position: relative;  float: left; margin-right: 4px; margin-bottom: 8px;"/>

                            <img src ="/images/delete.ico" id= "del" onClick = "deleteImage('img_avatar', 'del')" style="display: none;width: 24px; height: 24px; position: relative; left: -8px; float:left; margin-top: -8px; margin-left: -16px;"/>
                            </th>                       
                            
                          </tr>
                          <tr>
                            <td><input name ="avatar" type='file' onchange="readURL(this,'img_avatar','del');" style = "position: relative; margin-bottom: -8px;" /></td>                           
