                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="username" >User's Name <span class="required"></span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input name = "_id" value = "{{user.id}}" style="display:none;"/>

                          <input type="text" id="username" name="username" required="required" value="{{user.username}}" class="form-control col-md-7 col-xs-12">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email" >Email <span class="required"></span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="text" id="email"  name="email" value="{{user.email}}" class="form-control col-md-7 col-xs-12">
                          <input type="text" name="index" value="{{index}}" style="display: none;">
                        </div>
                      </div>
                      
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="gender" >Gender <span class="required"></span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="text" id="gender" style="width: 150px;float: left"  name="gender" value="{{user.gender}}" class="form-control col-md-7 col-xs-12">
                          <select onChange="chooseGender(this)" style ="width: 100px; height: 34px; margin-left: 8px;" >
                                  <option>Male</option>
                                  <option>Female</option>                                 
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="price" class="control-label col-md-3 col-sm-3 col-xs-12">Role</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="text" id="role"  style="width: 150px;float: left"   name="role" value="{{user.role}}" class="form-control col-md-7 col-xs-12">
                          <select onChange="chooseRole(this)" style ="width: 100px; height: 34px; margin-left: 8px;" n>
